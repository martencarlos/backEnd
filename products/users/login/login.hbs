<link href="/public/css/sign-in.css" rel="stylesheet" />

<main class="form-signin">
  <form method="post" action="/users/login">
    <h3 class="mb-4" id="login-heading">
      Login
    </h3>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" style="width:40px">
            <i class="bi-person-circle" role="img" aria-label="user"></i>
          </span>
        </div>
        <input
          name="username"
          type="text"
          class="form-control"
          placeholder="Username"
          required="required"
        />
      </div>
      <div class="invalid-feedback" style="">
        Please provide a valid username.
      </div>
    </div>

    <div class="form-group">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" style="width:40px">
            <i class="bi-key-fill" role="img" aria-label="user"></i>
          </span>
        </div>
        <input
          name="password"
          type="password"
          class="form-control"
          placeholder="Pasword"
          required="required"
        />
      </div>
      <div class="col-md-12 text-left pl-4 pr-0 pt-3">
        <input
          class="form-check-input"
          type="checkbox"
          id="exampleCheck1"
          value="on"
        />
        <label class="form-check-label">
          Remember me
        </label>
      </div>
    </div>

    <div class="col-md-12 text-center">
      <button
        class="btn btn-primary w-75 text-center"
        style="margin-top: 10px"
        type="submit"
      >
        Sign in
      </button>
    </div>
  </form>
</main>